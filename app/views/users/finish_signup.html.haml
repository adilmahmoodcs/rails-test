#add-email.container
  %h1 Add Email
  = form_for(current_user, :as => 'user', :url => finish_signup_user_path(current_user), :html => { role: 'form'}) do |f|
    = errors_for(current_user)

    .form-group
      = f.label :email
      .controls
        = f.text_field :email, :autofocus => true, :value => '', class: 'form-control input-lg', placeholder: 'Example: email@me.com'
        %p.help-block Please confirm your email address. No spam.
    .actions
      = f.submit 'Continue', :class => 'btn btn-primary'